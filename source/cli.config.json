{
  "questions": [
    {
      "type": "confirm",
      "name": "devServer",
      "message": "Do you want a dev server?"
    },
    {
      "type": "checkbox",
      "name": "jsOptions",
      "message": "Select what options you want for your JavaScript",
      "choices": [
        {
          "name": "Concat",
          "short": "Concat",
          "value": "concat"
        },
        {
          "name": "Uglify",
          "short": "Uglify",
          "value": "uglify"
        },
        {
          "name": "JSHint",
          "short": "JSHint",
          "value": "jshint"
        },
        {
          "name": "Convert ES6 -> ES5",
          "short": "ES6->ES5",
          "value": "babel"
        },
        {
          "name": "Compile CoffeeScript",
          "short": "CoffeeScript",
          "value": "coffee"
        }
      ]
    },
    {
      "type": "input",
      "name": "jsDistSource",
      "message": "JS source destination",
      "default": "src/javascript",
      "filter": "formatDist"
    },
    {
      "type": "input",
      "name": "jsDistDest",
      "message": "JS build destination",
      "default": "dist/javascript",
      "filter": "formatDist"
    },
    {
      "type": "list",
      "name": "cssPreProcessorType",
      "message": "Which pre-processor do you want to use for your CSS?",
      "choices": [
        {
          "name": "None",
          "short": "None",
          "value": "none"
        },
        {
          "name": "LESS",
          "short": "LESS",
          "value": "less"
        },
        {
          "name": "Sass",
          "short": "Sass",
          "value": "sass"
        },
        {
          "name": "Stylus",
          "short": "Stylus",
          "value": "stylus"
        }
      ]
    },
    {
      "type": "checkbox",
      "name": "cssOptions",
      "message": "Select what options you want for your CSS?",
      "choices": [
        {
          "name": "Autoprefix",
          "short": "Autoprefix",
          "value": "autoprefixer"
        },
        {
          "name": "Minify",
          "short": "Minify",
          "value": "minifycss"
        }
      ]
    },
    {
      "type": "input",
      "name": "cssDistSource",
      "message": "CSS source destination",
      "default": "src/css",
      "filter": "formatDist"
    },
    {
      "type": "input",
      "name": "cssDistDest",
      "message": "CSS build destination",
      "default": "dist/css",
      "filter": "formatDist"
    },
    {
      "type": "checkbox",
      "name": "imageOptions",
      "message": "Select what options you want for your images",
      "choices": [
        {
          "name": "Minify",
          "short": "Minify",
          "value": "minifyimage"
        }
      ]
    },
    {
      "type": "input",
      "name": "imageDistSource",
      "message": "Image source destination",
      "default": "src/images",
      "filter": "formatDist",
      "when": "imageOptions.minifyimage"
    },
    {
      "type": "input",
      "name": "imageDistDest",
      "message": "Image build destination",
      "default": "dist/images",
      "filter": "formatDist",
      "when": "imageOptions.minifyimage"
    },
    {
      "type": "confirm",
      "name": "outputDependencies",
      "message": "Do you want me to generate a file with an npm install string (install-dependencies.txt)?"
    }
  ]
}
